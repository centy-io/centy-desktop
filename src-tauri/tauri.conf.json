{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Centy",
  "version": "0.1.0",
  "identifier": "io.centy.desktop",
  "build": {
    "beforeDevCommand": "pnpm --filter centy-app dev",
    "devUrl": "http://localhost:5180",
    "beforeBuildCommand": "pnpm build:frontend",
    "frontendDist": "../centy-app/out"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "Centy",
        "width": 1200,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false,
        "center": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "externalBin": [
      "bin/centy-daemon"
    ],
    "macOS": {
      "minimumSystemVersion": "10.15"
    },
    "windows": {
      "wix": {
        "language": "en-US"
      }
    },
    "linux": {
      "deb": {
        "depends": []
      },
      "rpm": {
        "release": "1"
      }
    }
  },
  "plugins": {
    "shell": {
      "open": true
    }
  }
}
